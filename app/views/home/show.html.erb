<h1><%= @plant.common_name %></h1>

<div class="show-page-container" data-controller="timer">
  <div class="card-container">
    <div class="card mb-4">
      <%= image_tag @plant.image_url, class: "card-img-top fixed-img", alt: @plant.common_name %>
      <div class="card-body">
        <h5 class="card-title"><%= @plant.common_name %></h5>
        <p class="card-text">
          <strong>Latin Name:</strong> <em><%= @plant.latin_name %></em>
        </p>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Categories:</strong> <%= @plant.categories %></li>
          <li class="list-group-item"><strong>Watering:</strong> <%= @plant.watering %></li>
          <li class="list-group-item"><strong>Light Ideal:</strong> <%= @plant.light_ideal %></li>
        </ul>
        <div class="mt-3">
          <a href="<%= @plant.url %>" class="btn btn-primary" target="_blank">More Info</a>
        </div>
      </div>
    </div>
  </div>

  <div class="timer-container">
    <h4>Water Timer</h4>
      <% if @plant.timer_end_at.present? %>
        <div id="timer" data-timer-end="<%= @plant.timer_end_at.iso8601 %>"></div>
      <% else %>
        <p>No timer set.</p>
      <% end %>
      <%= form_with url: set_watering_home_path(@plant), method: :post, local: true do %>
        <div class="form-group">
          <label>Days</label>
          <%= number_field_tag 'timer[days]', 0, class: 'form-control', min: 0 %>
        </div>
        <div class="form-group">
          <label>Hours</label>
          <%= number_field_tag 'timer[hours]', 0, class: 'form-control', min: 0, max: 23 %>
        </div>
        <div class="form-group">
          <label>Minutes</label>
          <%= number_field_tag 'timer[minutes]', 0, class: 'form-control', min: 0, max: 59 %>
        </div>
        <%= submit_tag 'Start Timer', class: 'btn btn-primary' %>
      <% end %>
      </div>
  </div>

<%= link_to 'Back to My Collection', root_path, class: 'btn btn-secondary' %>
