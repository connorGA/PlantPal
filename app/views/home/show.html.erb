<h1><%= @plant.common_name %></h1>

<div class="show-page-container" data-controller="timer">
  <div class="card-container">
    <div class="card mb-4">
      <%= image_tag @plant.image_url, class: "card-img-top fixed-img", alt: @plant.common_name %>
      <div class="card-body">
        <h5 class="card-title"><%= @plant.common_name %></h5>
        <p class="card-text">
          <strong>Latin Name:</strong> <em><%= @plant.latin_name %></em>
        </p>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Categories:</strong> <%= @plant.categories %></li>
          <li class="list-group-item"><strong>Watering:</strong> <%= @plant.watering %></li>
          <li class="list-group-item"><strong>Light Ideal:</strong> <%= @plant.light_ideal %></li>
        </ul>
        <div class="mt-3">
          <a href="<%= @plant.url %>" class="btn btn-primary" target="_blank">More Info</a>
        </div>
      </div>
    </div>
  </div>

  <div class="timer-container">
    <h2>Water Timer</h2>
    <form id="timer-form">
      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="days-input">Days:</label>
          <input type="number" id="days-input" class="form-control" min="0" required>
        </div>
        <div class="form-group col-md-4">
          <label for="hours-input">Hours:</label>
          <input type="number" id="hours-input" class="form-control" min="0" max="23" required>
        </div>
        <div class="form-group col-md-4">
          <label for="minutes-input">Minutes:</label>
          <input type="number" id="minutes-input" class="form-control" min="0" max="59" required>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Start Timer</button>
    </form>
    <div id="countdown" class="mt-3"></div>
  </div>
</div>

<%= link_to 'Back to My Collection', root_path, class: 'btn btn-secondary' %>
