<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="container" style="max-width: 400px;">
    <h2 class="text-center mb-4 text-white">Edit Profile</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <% if resource.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :email, class: "form-label text-white" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-warning">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :password, "New password (leave blank if you don't want to change it)", class: "form-label text-white" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm new password", class: "form-label text-white" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, "Current password (we need your current password to confirm your changes)", class: "form-label text-white" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Update", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      
      <p class="text-white">Unhappy?</p>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-block" %>
    </div>

    <div class="text-center mt-3">
      <%= link_to "Back", :back, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
